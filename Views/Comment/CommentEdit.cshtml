@model eTicaretEL.Entities.Comment?

@{
    ViewBag.Title = "title";
    Layout = "_LayouteTicaret";
}


<div class="row container padding ">
    <div class="col-xl-11 col-md-11">
        <div class="row">
            <div class="col-md-6 col-md-offset-3">
                <h2>Yorum Düzenleme</h2>
                <form method="post" asp-action="CommentEdit" asp-controller="Comment">
                    <div class="form-group">
                        <label for="productName">Kullanıcı Id</label>
                        <input type="text" asp-for="UserId" class="form-control" id="productName" placeholder="Ürün Adı">
                        <span asp-validation-for="UserId" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label for="productDescription">Puan</label>
                        <textarea class="form-control" asp-for="Raiting" id="productDescription" rows="3" placeholder="Ürün Açıklaması"></textarea>
                        <span asp-validation-for="Raiting" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label for="productPrice">Tarih</label>
                        <input type="text" asp-for="Date" class="form-control" id="productPrice" placeholder="Ürün Fiyatı">
                        <span asp-validation-for="Date" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label for="productImage">Ürün Id</label>
                        <input type="text" asp-for="ProductId" class="form-control-file" id="productImage">
                        <span asp-validation-for="ProductId" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label for="productModel">Yorum</label>
                        <textarea type="text" asp-for="Description" class="form-control" id="productModel" placeholder="Model"></textarea>
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>
                    <button type="submit" class="btn btn-primary">Yorumu Düzenle</button>
                    <a class="btn btn-danger text-white" data-toggle="modal" data-target="#exampleModal2-@Html.DisplayFor(x => x.Id)">Sil</a>
                </form>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="exampleModal2-@Html.DisplayFor(x => x.Id)" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">@Html.DisplayFor(x => x.Description)</h5>
            </div>
            <div class="modal-body">
                <a href="/AdminComment/CommentRemove/@Html.DisplayFor(x => x.Id)" class="btn btn-danger">Yorumu Sil</a>
            </div>
        </div>
    </div>
</div>