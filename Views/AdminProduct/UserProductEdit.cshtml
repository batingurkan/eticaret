@model eTicaretEL.Entities.Product?

@{
    ViewBag.Title = "title";
    Layout = "_LayoutAdmin";
}

<div class="row container padding ">
    <div class="col-xl-1 col-md-1">
        <img width="250px" src="~/electro-master/img/@Html.DisplayFor(x => x.Img)"/>
    </div>
    <div class="col-xl-11 col-md-11">
        <div class="row">
            <div class="col-md-6 col-md-offset-3">
                <h2>Ürün Düzenleme</h2>
                <form method="post" asp-action="UserProductEdit" enctype="multipart/form-data">
                    <div class="form-group">
                        <label for="productName">Ürün Adı</label>
                        <input type="text" asp-for="Name" class="form-control" id="productName" placeholder="Ürün Adı">
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label for="productDescription">Açıklama</label>
                        <textarea class="form-control" asp-for="Description" id="productDescription" rows="3" placeholder="Ürün Açıklaması"></textarea>
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label for="productPrice">Fiyat</label>
                        <input type="number" asp-for="Price" class="form-control" id="productPrice" placeholder="Ürün Fiyatı">
                        <span asp-validation-for="Price" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="CategoryId">Kategori</label>
                        <select asp-for="CategoryId" class="form-control" asp-items="@(ViewBag.vlc as IEnumerable<SelectListItem>)"></select>
                        <span asp-validation-for="CategoryId" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label for="productImage">Ürün Resmi (Img)</label>
                        <input type="file" asp-for="Img" class="form-control-file" id="productImage">
                        <span asp-validation-for="Img" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label for="productBrand">Marka</label>
                        @Html.DropDownListFor(x => x.BrandId, (List<SelectListItem>)ViewBag.vlb, new { @class = "form-control" })
                        <span asp-validation-for="BrandId" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label for="productModel">Model</label>
                        <input type="text" asp-for="Model" class="form-control" id="productModel" placeholder="Model">
                        <span asp-validation-for="Model" class="text-danger"></span>
                    </div>
                    <button type="submit" class="btn btn-primary">Ürünü Düzenle</button>
                    <a class="btn btn-danger text-white" data-toggle="modal" data-target="#exampleModal2-@Html.DisplayFor(x => x.Id)">Sil</a>
                </form>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="exampleModal2-@Html.DisplayFor(x => x.Id)" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">@Html.DisplayFor(x => x.Name)</h5>
            </div>
            <div class="modal-body">
                <img src="~/electro-master/img/@Html.DisplayFor(x => x.Img)" width="300" height="300" class="img-fluid" alt="Ürün Resmi">
            </div>
            <div class="modal-body">
                <a href="/AdminProduct/UserProductDelete/@Html.DisplayFor(x => x.Id)" class="btn btn-danger">Ürünü Sil</a>
            </div>
        </div>
    </div>
</div>