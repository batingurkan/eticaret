@model List<eTicaretEL.Dtos.ProductDto>



<div id="store" class="col-md-10">
<div class="alert alert-success" role="alert">
 @ViewBag.v1 Ürün Bulundu
</div>
    <div class="row">
        

        @foreach (var item in Model)
        {
            <div class="col-md-4 col-xs-6">
                <div class="product">
                    <div class="product-img">
                         <img src="~/electro-master/img/@item.Img"  width="345" height="250"  alt="">
                        <div class="product-label">
                            <span class="sale">-30%</span>
                            <span class="new">NEW</span>
                        </div>
                    </div>
                    <div class="product-body">
                        <p class="product-category">@item.CategoryName</p>
                        <h3 class="product-name">
                            <a href="#">@item.Name</a>
                        </h3>
                        <h4 class="product-price">$@item.Price <del class="product-old-price">$@item.Price</del></h4>
                        <div class="product-rating">
                            <i class="fa fa-star"></i>
                            <i class="fa fa-star"></i>
                            <i class="fa fa-star"></i>
                            <i class="fa fa-star"></i>
                            <i class="fa fa-star"></i>
                        </div>
                        <div class="product-btns">
                            <button class="add-to-wishlist">
                                <i class="fa fa-heart-o"></i><span class="tooltipp">Favorilere Ekle</span>
                            </button>
                            <button class="quick-view"><a href="/Home/Product/@item.Id">
                                <i class="fa fa-eye"></i><span class="tooltipp">Ürünü İncele</span></a>
                            </button>
                        </div>
                    </div>
                    <div class="add-to-cart">
                        <button class="add-to-cart-btn"><i class="fa fa-shopping-cart"></i>Sepete Ekle</button>
                    </div>
                </div>
            </div>
        }

    </div>
<div class="store-filter clearfix">
    <ul class="store-pagination">
        <li class="active">1</li>
        <li>
            <a href="#">2</a>
        </li>
        <li>
            <a href="#">3</a>
        </li>
        <li>
            <a href="#">4</a>
        </li>
        <li>
            <a href="#">
                <i class="fa fa-angle-right"></i>
            </a>
        </li>
    </ul>
</div>

</div>