@model List<eTicaretEL.Dtos.OrderDetailDto>

<h2 class="text-success">Sipariş Detayı</h2>
<br/>
<div class="row">
    <div class="col-md-8" style="display: inline-block;">
        <table class="table">
            <thead class="thead-dark">
                <tr>
                    <th scope="col">Id</th>
                    <th scope="col">Resim</th>
                    <th scope="col">Ürün</th>
                    <th scope="col">Tutar</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <th scope="row">@item.Id</th>
                        <td>
                            <img src="~/electro-master/img/@item.Products.Img" width="50px" height="50px" />
                        </td>
                        <td>@item.Products.Name</td>
                        <td>@item.Price</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
    <div class="col-md-4" style="display: inline-block;">
        @await Component.InvokeAsync("OrderSummary", new { id = Model.FirstOrDefault()?.Id })
    </div>
</div>




  



