@model List<eTicaretEL.Dtos.ProductDto>

<div class="col-md-12">
    <div class="row">
        <div class="products-tabs">
            <!-- tab -->
            <div id="tab2" class="tab-pane fade in active">
                <div class="products-slick" data-nav="#slick-nav-1">
                    <!-- product -->
                    @foreach (var item in Model)
                    {
                        <div class="product">
                            <div class="product-img">
                                <img src="~/electro-master/img/@item.Img" alt="">
                                <div class="product-label">
                                    <span class="sale">-30%</span>
                                </div>
                            </div>
                            <div class="product-body">
                                <p class="product-category">@item.CategoryName</p>
                                <a href="/Home/Product/@item.Id">
                                    <h3 class="product-name">
                                        @item.Name
                                    </h3>
                                </a>
                                <h4 class="product-price">$@item.Price <del class="product-old-price">$@item.Price</del></h4>
                                <div class="product-rating">
                                    <i class="fa fa-star"></i>
                                    <i class="fa fa-star"></i>
                                    <i class="fa fa-star"></i>
                                    <i class="fa fa-star"></i>
                                    <i class="fa fa-star"></i>
                                </div>
                                <div class="product-btns">
                                    <button class="add-to-wishlist">
                                        <i class="fa fa-heart-o"></i><span class="tooltipp">Favoriler Ekle</span>
                                    </button>
                                    <button class="quick-view">
                                        <a href="/Home/Product/@item.Id">
                                            <i class="fa fa-eye"></i><span class="tooltipp">Ürünü İncele</span>
                                        </a>
                                    </button>
                                </div>
                            </div>
                            <div class="add-to-cart">
                                <button class="add-to-cart-btn"><i class="fa fa-shopping-cart"></i> Sepete Ekle</button>
                            </div>
                        </div>
                    }

                    <!-- /product -->

                    <!-- /product -->
                </div>
               <div id="slick-nav-1" class="products-slick-nav"></div>
            </div>
            <!-- /tab -->
        </div>
    </div>
</div>