@model eTicaretEL.Entities.Increases

@{
    ViewBag.Title = "title";
    Layout = "_LayoutAdmin";
}


<div class="row container padding ">
    <div class="col-xl-11 col-md-11">
        <div class="row">
            <div class="col-md-6 col-md-offset-3">
                <h2>Kargo ve Komisyon Ücreti</h2>
                <br/>
                <form method="post" asp-action="IncreasesEdit">
                    <div class="form-group">
                        <label for="productName">Komisyon</label>
                        <input type="text" asp-for="Comission" class="form-control" id="productName" placeholder="Komisyon">
                        <span asp-validation-for="Comission" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label for="productDescription">Kargo</label>
                        <input type="text" class="form-control" asp-for="ShippingMoney" id="productDescription" rows="3" placeholder="Kargo Ücreti">
                        <span asp-validation-for="ShippingMoney" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label for="productPrice">Boyut</label>
                        <input type="text" asp-for="Size" class="form-control" id="productPrice" placeholder="Boyutu">
                        <span asp-validation-for="Size" class="text-danger"></span>
                    </div>
                    <button type="submit" class="btn btn-primary">Düzenle</button>
                </form>
            </div>
        </div>
    </div>
</div>

