@model List<eTicaretEL.Entities.Comment>

@{
    ViewBag.Title = "title";
    Layout = "_LayoutAdmin";
}
<br/>
<h2>Yorumlar</h2>
<br/>
<div class="alert alert-success" role="alert">
    <span>Toplam<b> @ViewBag.v1 </b>Yorum Bulundu</span>
</div>
<table class="table">
    <thead class="thead-dark">
    <tr>
        <th scope="col">Id</th>
        <th scope="col">Resim</th>
        <th scope="col">Kullanıcı</th>
        <th scope="col">Yorum</th>
        <th scope="col">Puan</th>
        <th scope="col">Kullanıcı Yorumları</th>
        <th scope="col">Ürün Yorumları</th>
        <th scope="col">Kullanıcıyı Görüntüle</th>
        <th scope="col">Sil</th>

    </tr>
    </thead>
    <tbody>

    @foreach (var item in Model)
    {
        <tr>
            <th scope="row">@item.Id</th>
            <th scope="row">
                <img src="~/electro-master/img/@item.Product.Img" alt="Admin" width="40">
            </th>
            <th scope="row">@item.User.Name</th>
            <td>@item.Description</td>
            <td>@item.Raiting</td>
            <td>
                <a href="/AdminComment/UserComments/@item.UserId" class="btn btn-success">Kullanıcı</a>
            </td>
            <td>
                <a href="/AdminComment/ProductComments/@item.ProductId" class="btn btn-primary">Ürün</a>
            </td>
            <td>
                <a href="/AdminUser/UserEdit/@item.UserId" class="btn btn-warning">Görüntüle</a>
            </td>
            <td>
                <a href="/AdminComment/CommentEdit/@item.Id" class="btn btn-danger">Sil</a>
            </td>
        </tr>
    }
    </tbody>
</table>